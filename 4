#include <iostream>
#include <cmath>

using namespace std;

bool a(int number) {

    if (number % 2 == 0) {
        return false;
    }

    int limit = static_cast<int>(sqrt(number));
    for (int i = 3; i <= limit; i += 2) {
        if (number % i == 0) {
            return false;
        }
    }

    return true;
}

int main() {
    int num;

    cout << "Enter an integer: ";
    cin >> num;

    if (a(num)) {
        cout << num << " exactly." << endl;
    } else {
        cout << num << " never was." << endl;
    }

    return 0;
}
