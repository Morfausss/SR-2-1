#include <iostream>
#include <string>

using namespace std;

size_t Length(const string& str) {
    return str.length();
}

int main() {
    string userInput;

    cout << "Enter... the words: ";
    getline(cin, userInput);

    size_t a = Length(userInput);
    cout << "The length: " << a << endl;

    return 0;
}
